<odoo>
    <record id="gym_expansion_materiales_form_view" model="ir.ui.view">
        <field name="name">gym_expasion.materiales.form</field>
        <field name="model">gym_expansion.materiales</field>
        <field name="arch" type="xml">
            <form string="Materials">
                <sheet layout="auto">
                    <group>
                        <field name="name" />
                        <field name="quantity" />
                        <field name="materialType" />
                        <field name="users_ids" widget="many2many" />
                        <field name="classes_ids" widget="many2many" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="gym_expansion_materiales_tree_view" model="ir.ui.view">
        <field name="name">gym_expasion.materiales.tree</field>
        <field name="model">gym_expansion.materiales</field>
        <field name="arch" type="xml">
            <tree string="tree_string">
                <field name="name" />
                <field name="quantity" />
                <field name="materialType" />
                <field name="users_ids" />
                <field name="classes_ids" />
            </tree>
        </field>
    </record>

    <record id="materiales_list_action" model="ir.actions.act_window">
        <field name="name">Materiales</field>
        <field name="res_model">gym_expansion.materiales</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first material</p>
        </field>
    </record>
</odoo>