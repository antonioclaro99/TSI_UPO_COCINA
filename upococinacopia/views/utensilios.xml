<odoo>
  <record id="upococinacopia_utensilios_form_view" model="ir.ui.view">
    <field name="name">upococinacopia.utensilios.form</field>
    <field name="model">upococinacopia.utensilios</field>
    <field name="arch" type="xml">
      <form string="Utensilios">
        <sheet layout="auto">
          <group>
            <field name="id" />
            <field name="nombre" />
            <field name="descripcion" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="upococinacopia_utensilios_tree_view" model="ir.ui.view">
    <field name="name">upococinacopia.utensilios.tree</field>
    <field name="model">upococinacopia.utensilios</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
         <field name="id" />
         <field name="nombre" />
         <field name="descripcion" />
      </tree>
    </field>
  </record>

  <record id="utensilios_list_action" model="ir.actions.act_window">
    <field name="name">Utensilios</field>
    <field name="res_model">upococinacopia.utensilios</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create the first utensilio</p>
    </field>
  </record>
</odoo>