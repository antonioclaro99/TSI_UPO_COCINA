<odoo>
  <record id="upoCocina_utensilio_form_view" model="ir.ui.view">
    <field name="name">upoCocina.utensilio.form</field>
    <field name="model">upoCocina.utensilio</field>
    <field name="arch" type="xml">
      <form string="Utensilio">
        <sheet layout="auto">
          <group>
            <field name="id" />
            <field name="nombre" />
            <field name="descripcion" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="upoCocina_utensilio_tree_view" model="ir.ui.view">
    <field name="name">upoCocina.utensilio.tree</field>
    <field name="model">upoCocina.utensilio</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
         <field name="id" />
         <field name="nombre" />
         <field name="descripcion" />
      </tree>
    </field>
  </record>

  <record id="utensilio_list_action" model="ir.actions.act_window">
    <field name="name">Utensilio</field>
    <field name="res_model">upoCocina.utensilio</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create the first utensilio</p>
    </field>
  </record>
</odoo>