<odoo>
  <record id="upoCocina_clase_form_view" model="ir.ui.view">
    <field name="name">upoCocina.clase.form</field>
    <field name="model">upoCocina.clase</field>
    <field name="arch" type="xml">
      <form string="Clase">
        <sheet layout="auto">
          <group>
            <field name="nombreClase" />
            <field name="fechaInicio" />
            <field name="fechaFin" />
            <field name="aula_ids" widget="many2one" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="upoCocina_clase_tree_view" model="ir.ui.view">
    <field name="name">upoCocina.clase.tree</field>
    <field name="model">upoCocina.clase</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
         <field name="nombreClase" />
         <field name="fechaInicio" />
         <field name="fechaFin" />
         <field name="aula_ids" widget="many2one" />
      </tree>
    </field>
  </record>

  <record id="clase_list_action" model="ir.actions.act_window">
    <field name="name">Clase</field>
    <field name="res_model">upoCocina.clase</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create the first clase</p>
    </field>
  </record>
</odoo>