<odoo>
  <record id="upoCocina_aula_form_view" model="ir.ui.view">
    <field name="name">upoCocina.aula.form</field>
    <field name="model">upoCocina.aula</field>
    <field name="arch" type="xml">
      <form string="Aula">
        <sheet layout="auto">
          <group>
            <field name="nAula" />
            <field name="capacidadMax" />
            <field name="puestos_ids" widget="many2one" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="upoCocina_aula_tree_view" model="ir.ui.view">
    <field name="name">upoCocina.aula.tree</field>
    <field name="model">upoCocina.aula</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
         <field name="nAula" />
         <field name="capacidadMax" />
         <field name="puestos_ids" widget="many2one" />
      </tree>
    </field>
  </record>

  <record id="aula_list_action" model="ir.actions.act_window">
    <field name="name">Aula</field>
    <field name="res_model">upoCocina.aula</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create the first aula</p>
    </field>
  </record>
</odoo>