<odoo>
  <record id="UPOCOCINA_aulas_form_view" model="ir.ui.view">
    <field name="name">UPOCOCINA.aulas.form</field>
    <field name="model">UPOCOCINA.aulas</field>
    <field name="arch" type="xml">
      <form string="Aulas">
        <sheet layout="auto">
          <group>
            <field name="nAula" />
            <field name="capacidadMax" />
            <field name="puestos_ids" widget="many2one" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="UPOCOCINA_aulas_tree_view" model="ir.ui.view">
    <field name="name">UPOCOCINA.aulas.tree</field>
    <field name="model">UPOCOCINA.aulas</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
         <field name="nAula" />
         <field name="capacidadMax" />
         <field name="puestos_ids" widget="many2one" />
      </tree>
    </field>
  </record>

  <record id="aulas_list_action" model="ir.actions.act_window">
    <field name="name">Aulas</field>
    <field name="res_model">UPOCOCINA.aulas</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create the first aula</p>
    </field>
  </record>
</odoo>